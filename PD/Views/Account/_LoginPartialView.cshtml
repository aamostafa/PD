@model PD.Contracts.Entities.LoginModel

<section id="loginForm">
    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        
        <div class="loginHead">
            <img src="~/Content/common/images/Logo-no-text.png" />
            <label>Sign In</label>
        </div>
        <fieldset class="loginFieldset">
            <div class="form-row">
                <span>
                    <label class="input-label">@Html.LabelFor(m => m.UserName)</label>
                    <span class="astrisk">*</span>
                </span>
                <span class="col-xs-12">
                    @Html.TextBoxFor(m => m.UserName)
                    <small class="validation-msg col-xs-12" ng-show="createCourseForm.aboutCourse.$error.required">@Html.ValidationMessageFor(m => m.UserName)</small>
                </span>
            </div>
            <div class="form-row">
                <span>
                    <label class="input-label">@Html.LabelFor(m => m.Password)</label>
                    <span class="astrisk">*</span>
                </span>
                <span class="col-xs-12">
                    @Html.PasswordFor(m => m.Password)
                    <small class="validation-msg col-xs-12" ng-show="createCourseForm.aboutCourse.$error.required">@Html.ValidationMessageFor(m => m.Password)</small>
                </span>
            </div>
            <div class="form-row">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe, new { @class = "checkbox", @style = "display:inline;padding-left: 3px" })
            </div>
