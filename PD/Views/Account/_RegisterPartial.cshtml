@model PD.Contracts.Entities.RegisterModel
<section id="loginForm">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        

        <div class="loginHead">
            <img src="~/Content/common/images/Logo-no-text.png" />
            <label>Register</label>
        </div>
        
        <fieldset class="loginFieldset">
            <div class="form-row">
                <span>
                    <label class="input-label">@Html.LabelFor(m => m.UserName)</label>
                    <span class="astrisk">*</span>
                </span>
                <span class="col-xs-12">
                    @Html.TextBoxFor(m => m.UserName)
                </span>
            </div>
            <div class="form-row">
                <span>
                    <label class="input-label">@Html.LabelFor(m => m.Password)</label>
                    <span class="astrisk">*</span>
                </span>
                <span class="col-xs-12">
                    @Html.PasswordFor(m => m.Password)
                </span>
            </div>
            <div class="form-row">
                <span>
                    <label class="input-label">@Html.LabelFor(m => m.ConfirmPassword)</label>
                    <span class="astrisk">*</span>
                </span>
                <span class="col-xs-12">
                    @Html.PasswordFor(m => m.ConfirmPassword)
                </span>
            </div>
            <div class="form-row">
                <span>
                    <label class="input-label">@Html.LabelFor(m => m.Email)</label>
                    <span class="astrisk">*</span>
                </span>
                <span class="col-xs-12">
                    @Html.TextBoxFor(m => m.Email)
                </span>
            </div>
            <label class="hint-msg">
                By clicking "Register", you are agreeing to our terms of use and privacy policy
            </label>
            <div class="loginActionArea">
                <button class="pd-btn btn">Register</button>
            </div>
            @Html.ValidationSummary()
