    @*<script src="~/Scripts/Wizard/lodash.js"></script>
        <link href="~/Scripts/Wizard/angular-wizard.css" rel="stylesheet" />
        <script src="~/Scripts/Wizard/angular-wizard.js"></script>*@


    <script src="~/Application/Services/DataContext.js"></script>
    <script src="~/Application/Services/UserServices.js"></script>

    <script src="~/Application/Controllers/Common.js"></script>
    @RenderSection("AppScripts", false)


    <script src="~/Scripts/highcharts/highcharts.js"></script>


    @*<script src="~/tinymce/jquery.tinymce.js"></script>
        <script src="~/Application/Directives/tinymceDirective.js"></script>*@


    <script src="~/Scripts/Tree/jquery-ui.custom.js"></script>
