@model IEnumerable<PD.Contracts.Entities.Course>

@{
    ViewBag.Title = "Index";
}

<div class="centered-cont manage-courses">
    <h2>Courses </h2>

    <table class="table table-bordered table-hover table-striped">
        <col width="15%">
        <col width="55%">
        <col width="20%">
        <col width="10%">
        <tr>
            <th>
                Category
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                Date
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    Start:@item.StartDate.ToShortDateString()
                    End:  @item.EndDate.ToShortDateString()
                </td>
                <td>
                    <a href="/#/EditCourse/@item.ID">Edit</a>|
                    <a href="/#/CourseDetails/@item.ID">Details</a>
                </td>
            </tr>
        }

    </table>
</div>